doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title= title
        link(rel='stylesheet', href='/stylesheets/cosmo.bootstrap.css')
        link(rel='stylesheet', href='/stylesheets/site.css')
        script(src='/javascripts/vendor/modernizr-2.6.2.js')
    body
        script.
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-42354386-2', 'aliasr.com');
            ga('send', 'pageview');
        div(class='navbar navbar-inverse navbar-fixed-top')
            div(class='container')
                div(class='navbar-header')
                    button(type='button' class='navbar-toggle' data-toggle='collapse' data-target='.navbar-collapse')
                        span(class='icon-bar')
                        span(class='icon-bar')
                        span(class='icon-bar')
                    a(href='/' class='navbar-brand') Aliasr
                div(class='navbar-collapse collapse')
                    ul(class='nav navbar-nav')
                        li(class='#{menu==="home" ? "active":""}'): a(href='/')
                            span(class='glyphicon-list right-buffer glyphicon')
                            span(class='hidden-sm') Home
                        li(class='#{menu==="stats" ? "active":""}'): a(href='/stats')
                            span(class='glyphicon-stats right-buffer glyphicon')
                            span(class='hidden-sm') Stats
                    if hasCount
                        div(id='aliasCountLabel' class='navbar-right navbar-text')
                            | #{aliasCount} aliases have been created.
        div(class='container body-content')
            block content
        script(src='https://cdn.socket.io/socket.io-1.0.0.js')
        script(src='/javascripts/vendor/jquery-1.10.2.min.js')
        script(src='/javascripts/vendor/bootstrap.min.js')
        script(src='/javascripts/vendor/respond.min.js')
        block scripts
